<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F0F5FF"
    android:padding="32dp">

    <!-- Shield Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="24dp"
        android:contentDescription="Blocked" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ›¡ï¸ App Blocked"
        android:textSize="28sp"
        android:textColor="#1E40AF"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- App Name -->
    <TextView
        android:id="@+id/blocked_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This app is blocked"
        android:textSize="18sp"
        android:textColor="#374151"
        android:layout_marginBottom="24dp" />

    <!-- Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay focused! You've chosen to block this app."
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:textAlignment="center"
        android:layout_marginBottom="48dp" />

    <!-- Go Back Button -->
    <Button
        android:id="@+id/btn_go_back"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:text="Go Back"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_primary"
        android:layout_marginBottom="16dp" />

    <!-- Open Omit Button -->
    <Button
        android:id="@+id/btn_open_omit"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:text="Open Omit"
        android:textSize="16sp"
        android:textColor="#1E40AF"
        android:background="@drawable/button_outline" />

</LinearLayout>
